{
  "name": "node-template",
  "version": "1.0.0",
  "description": "template to start a node project",
  "type": "module",
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc-watch --noClear -p ./tsconfig.json --onSuccess 'node --es-module-specifier-resolution=node ./dist/index'",
    "lint": "eslint 'src/**'",
    "prepare": "husky install",
    "start": "node --es-module-specifier-resolution=node ./dist/index"
  },
  "author": "JP",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^8.2.0",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@types/node": "^16.10.3",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.1",
    "tsc-watch": "^4.5.0"
  },
  "engines": {
    "node": "16.6.2",
    "npm": "7.20.3",
    "yarn": "1.9.2"
  }
}
